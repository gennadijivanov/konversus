<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Green Button Style-->
    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0" x:Key="GreenBtnBg">
        <GradientStop Color="#FFC4F70D" Offset="0.5" />
        <GradientStop Color="#FF47A900" Offset="1" />
        <GradientStop Color="#FF47A900" Offset="0" />
    </LinearGradientBrush>

    <Style x:Key="greenButtonTextStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>

    <Style x:Key="greenButtonStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GreenBtnBg}"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="CornerRadius" Value="10"></Setter>
        <Setter Property="Padding" Value="10"></Setter>
    </Style>

</ResourceDictionary>