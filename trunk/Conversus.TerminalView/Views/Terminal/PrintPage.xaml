<Page x:Class="Conversus.TerminalView.Views.Terminal.PrintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conversus.TerminalView.Views.Terminal"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="PrintPage" Loaded="Page_Loaded">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
        <TextBlock Style="{StaticResource fullscreenMessage}">
            Пожалуйста подождите,<LineBreak />
            печатается билет
        </TextBlock>
        <StackPanel Opacity="0">
            <local:TicketPrintControl x:Name="ticketView" HorizontalAlignment="Left" Height="350"/>
        </StackPanel>
    </Grid>
</Page>
