<Window x:Class="Conversus.AdminView.EditOperatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Conversus.AdminView.Views.BackGrounds"
        Title="Добавление оператора" Height="470" Width="500" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <local:DefaultBackGround Grid.ColumnSpan="2" Grid.RowSpan="6"></local:DefaultBackGround>
        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Style="{StaticResource loginLabelStyle}">Имя:</Label>
        <TextBox Name="nameTextBox" Grid.Column="1" Style="{StaticResource inputStyle}" Margin="0,10,12,10"></TextBox>
        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Style="{StaticResource loginLabelStyle}">Логин:</Label>
        <TextBox Name="loginTextBox" Grid.Column="1" Grid.Row="1" Style="{StaticResource inputStyle}" Margin="0,10,12,10"></TextBox>
        <Label Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Style="{StaticResource loginLabelStyle}">Пароль:</Label>
        <TextBox Name="passTextBox" Grid.Column="1" Grid.Row="2" Style="{StaticResource inputStyle}" Margin="0,10,12,10"></TextBox>
        <Button Name="saveButton" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource inputBoardBtnStyle}" Height="50" Width="180" Margin="0,9,12,11" Click="registerButton_Click">Сохранить</Button>
        <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Style="{StaticResource loginLabelStyle}">Услуга:</Label>
        <ComboBox Name="queueTypeComboBox" Grid.Column="1" Grid.Row="3" Height="50" FontFamily="Tahoma" FontSize="25" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectedIndex="0" Margin="0,10,12,10" DataContext="{Binding}"></ComboBox>
        <Label Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Style="{StaticResource loginLabelStyle}">Окно:</Label>
        <TextBox Name="windowTextBox" Grid.Column="1" Grid.Row="4" Style="{StaticResource inputStyle}" Margin="0,10,12,10"></TextBox>
    </Grid>
</Window>
